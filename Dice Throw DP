#include<bits/stdc++.h>
using namespace std;
void func(int m,int n,int x);
int main()
{
    func(6,3,8);
    return 0;
}
void func(int m,int n,int x)
{
    int i,j,T[n][x+1];
    for(i=0;i<n;i++)
    {
        for(j=0;j<=x;j++)
        T[i][j]=0;
    }
    for(i=1;i<=m && i<=x;i++)
    {
         T[0][i]=1;
    }
    for(i=1;i<n;i++)
    {
        for(j=1;j<=x;j++)
        {
            if(i<j)
            T[i][j]=0;
            else if(j<=m)
            T[i][j]=accumulate(T[i-1][j-1],T[i-1][0],0);
            else
            T[i][j]=accumulate(T[i-1][j-1],T[i-1][j-1-m],0);
        }
    }
    for(i=0;i<n;i++)
    {
        cout<<endl;
        for(j=0;j<=x;j++)
        cout<<T[i][j]<<" ";
    }
}
